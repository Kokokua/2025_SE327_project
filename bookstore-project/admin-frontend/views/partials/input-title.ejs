<div class="mb-3">
    <label for="input-title" class="form-label">Title</label>
    <input type="text" id="input-title-<%= suffix %>" class="form-control" placeholder="Title" value="<%= typeof value !== 'undefined' ? _.escape(value) : '' %>">
</div>

<style>
    input[id^="input-title-"] {
        background-color: #222 !important;
        border: 1px solid #444 !important;
        color: #fff !important;
    }

    input[id^="input-title-"]:focus {
        background-color: #333 !important;
        border-color: #666 !important;
        box-shadow: 0 0 0 0.25rem rgba(102, 102, 102, 0.25) !important;
    }

    input[id^="input-title-"]::placeholder {
        color: rgba(255, 255, 255, 0.7) !important;
        opacity: 1 !important;
    }

    input[id^="input-title-"]::-webkit-input-placeholder {
        color: rgba(255, 255, 255, 0.7) !important;
    }
    
    input[id^="input-title-"]::-moz-placeholder {
        color: rgba(255, 255, 255, 0.7) !important;
    }
    
    input[id^="input-title-"]:-ms-input-placeholder {
        color: rgba(255, 255, 255, 0.7) !important;
    }
</style>