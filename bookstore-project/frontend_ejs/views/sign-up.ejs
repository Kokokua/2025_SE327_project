<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #fffbea;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .signup-container {
            background-color: #ffffff;
            width: 350px;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        .sign-up-logo {
            width: 120px;
            height: 120px;
            margin: 0 auto 1rem auto;
            background-color: #ffcc00;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .sign-up-logo img {
            max-width: 100%;
            max-height: 100%;
        }

        /* Title */
        .signup-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #fbc02d;
        }

        /* Form Fields */
        .form-group {
            margin-bottom: 1rem;
            display: flex;
            flex-direction: column;
        }

        .form-group label {
            margin-bottom: 0.25rem;
            font-weight: bold;
            color: #555;
        }

        .form-group input {
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
        }

        /* Password rules box */
        .password-rules {
            margin-top: 1rem;
            font-size: 0.85rem;
            color: #666;
            background-color: #fff9c4;
            padding: 0.75rem;
            border-radius: 4px;
            border: 1px solid #ffeb3b;
        }

        .password-rules p {
            margin-bottom: 0.5rem;
            line-height: 1.4;
        }

        /* Error Message */
        .error-message {
            color: red;
            font-size: 0.9rem;
            margin-top: 0.5rem;
            display: none;
        }

        /* Sign Up Button */
        .signup-btn {
            width: 100%;
            padding: 0.75rem;
            margin-top: 1rem;
            background-color: #ffc107;
            color: #fff;
            font-size: 1rem;
            font-weight: bold;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .signup-btn:hover {
            background-color: #ffb300;
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>
        <main class="flex-grow-1 d-flex justify-content-center align-items-center">

            <div class="signup-container">
                <div class="sign-up-logo">
                    <img src="/images/Icons/Logo_White.png" alt="B Store Logo" />
                </div>

                <h2>Sign Up</h2>

                <form id="signupForm">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" placeholder="Enter your username" required />
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" placeholder="Enter your email" required />
                    </div>

                    <div class="form-group">
                        <label for="dob">Date of Birth</label>
                        <input type="date" id="dob" name="dob" required />
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" placeholder="Enter your password"
                            required />
                    </div>

                    <div class="form-group">
                        <label for="confirm-password">Confirm Password</label>
                        <input type="password" id="confirm-password" name="confirm-password"
                            placeholder="Re-enter your password" required />
                    </div>

                    <!-- Password Rules -->
                    <div class="password-rules">
                        <p>Password conditions:</p>
                        <p>1. Must be 8â€“12 characters long.</p>
                        <p>2. Must contain both uppercase and lowercase letters.</p>
                        <p>3. Must contain at least 1 number.</p>
                        <p>4. Must contain at least 1 special character (@, #, $, !, %, ?, &).</p>
                        <p>5. Must not contain words related to username or email.</p>
                    </div>

                    <div class="error-message" id="errorMessage"></div>

                    <!-- Sign Up Button -->
                    <button type="submit" class="signup-btn">Sign Up</button>
                </form>
            </div>

            <script>
                const signupForm = document.getElementById("signupForm");
                const errorMessage = document.getElementById("errorMessage");

                signupForm.addEventListener("submit", async function (event) {
                    event.preventDefault();

                    // Gather field values
                    const username = document.getElementById("username").value.trim();
                    const email = document.getElementById("email").value.trim();
                    const dob = document.getElementById("dob").value.trim();
                    const password = document.getElementById("password").value;
                    const confirmPassword = document.getElementById("confirm-password").value;

                    // Email check: must contain '@'
                    const emailIsValid = email.includes("@");

                    // Password regex (8-12 chars, at least one uppercase, one lowercase, one digit, one special char)
                    // Special chars set: @#$!%?&
                    const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@#$!%?&])[A-Za-z\d@#$!%?&]{8,12}$/;
                    const passwordIsValid = passwordRegex.test(password);

                    // Check if any field is empty
                    if (!username || !email || !dob || !password || !confirmPassword) {
                        showError("Please fill in all fields.");
                        return;
                    }

                    // Check email format
                    if (!emailIsValid) {
                        showError("Invalid email format. Email must contain '@'.");
                        return;
                    }

                    // Validate Date of Birth
                    const dobDate = new Date(dob);
                    const today = new Date();
                    today.setHours(0, 0, 0, 0);

                    // Calculate the minimum allowed date (100 years ago)
                    const minDate = new Date(today);
                    minDate.setFullYear(today.getFullYear() - 100);

                    // Normalize the input date to midnight for accurate comparison
                    dobDate.setHours(0, 0, 0, 0);

                    // Check if date is in the future
                    if (dobDate > today) {
                        showError("Date of birth cannot be in the future.");
                        return;
                    }

                    // Check if date is older than 100 years
                    if (dobDate < minDate) {
                        showError("Date of birth cannot be more than 100 years ago.");
                        return;
                    }

                    // Check password regex
                    if (!passwordIsValid) {
                        showError("Password does not meet the required criteria.");
                        return;
                    }

                    // Check passwords match
                    if (password !== confirmPassword) {
                        showError("Passwords do not match.");
                        return;
                    }

                    const lowerPassword = password.toLowerCase();
                    const lowerUsername = username.toLowerCase();
                    const lowerEmail = email.toLowerCase();

                    if (lowerPassword.includes(lowerUsername) || lowerPassword.includes(lowerEmail)) {
                        showError("Password should not contain parts of your username or email.");
                        return;
                    }

                    try {
                        const response = await fetch('/api/users', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                username: username,
                                email: email,
                                password: password,
                                date_of_birth: dob
                            })
                        });

                        if (!response.ok) {
                            const errorData = await response.json();
                            throw new Error(errorData.error || 'Failed to create user');
                        }

                        const data = await response.json();
                        alert('Signup successful! Redirecting to login...');
                        window.location.href = '/login'; // Redirect after success
                    } catch (err) {
                        showError(err.message);
                    }
                });

                function showError(message) {
                    errorMessage.innerText = message;
                    errorMessage.style.display = "block";
                }
            </script>
        </main>
        <%- include('partials/footer') %>
        <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>