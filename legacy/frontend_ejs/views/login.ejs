<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Login - B Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* General Reset/Styling */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #fffbea;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        main {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }

        .login-container {
            background-color: #ffffff;
            width: 350px;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .login-logo {
            width: 120px;
            height: 120px;
            margin: 0 auto 1rem auto;
            background-color: #ffcc00;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .login-logo img {
            max-width: 100%;
            max-height: 100%;
        }

        /* Title */
        .login-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #fbc02d;
        }

        /* Form Fields */
        .form-group {
            margin-bottom: 1rem;
            display: flex;
            flex-direction: column;
        }

        .form-group label {
            margin-bottom: 0.25rem;
            font-weight: bold;
            color: #555;
        }

        .form-group input {
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
        }

        /* Buttons */
        .login-container .btn {
            width: 100%;
            padding: 0.75rem;
            margin-top: 1rem;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .login-btn {
            width: 100%;
            padding: 0.75rem;
            margin-top: 1rem;
            background-color: #ffc107;
            color: #fff;
            font-size: 1rem;
            font-weight: bold;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .login-btn:hover {
            background-color: #ffb300;
        }

        .forgot-password {
            background: none;
            border: none;
            color: #f57f17;
            margin-top: 0.75rem;
            cursor: pointer;
            text-decoration: underline;
            font-size: 0.9rem;
        }

        .signup-btn {
            background-color: #fbc02d;
            color: #fff;
            margin-top: 1rem;
        }

        .signup-btn:hover {
            background-color: #f9a825;
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>
        <main class="flex-grow-1 d-flex justify-content-center align-items-center">
            <div class="login-container">
                <div class="login-logo">
                    <img src="/images/Icons/Logo_White.png" alt="B Store Logo" />
                </div>

                <h2>Login</h2>

                <form id="loginForm">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" placeholder="Enter your username" required />
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" placeholder="Enter your password"
                            required />
                    </div>

                    <button type="submit" class="btn login-btn">Login</button>
                </form>

                <button class="forgot-password">Forgot
                    Password?</button>

                <button class="btn signup-btn" onclick="window.location.href='/sign-up';">Sign Up</button>
            </div>
        </main>

        <script>
            document.getElementById('loginForm').addEventListener('submit', async (e) => {
                e.preventDefault();

                const username = document.getElementById('username').value;
                const password = document.getElementById('password').value;

                try {
                    const response = await fetch('/api/users/login', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ usernameOrEmail: username, password })
                    });

                    const data = await response.json();

                    if (!response.ok) throw new Error(data.error || 'Login failed');
                    alert('Login successful!');

                    // Store token (consider httpOnly cookies instead)
                    localStorage.setItem('token', data.token);
                    checkAuth();
                    // Redirect to dashboard
                    window.location.href = '/';

                } catch (err) {
                    alert('Error: ' + err.message);
                    showError(err.message);
                }
            });
        </script>
        <%- include('partials/footer') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
            <link rel="stylesheet"
                href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</body>

</html>